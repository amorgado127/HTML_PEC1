{
    "main": "src/index.html",
    "scripts": {
        "parcel:dev": "parcel ./src/index.html ./src/categoria.html ./src/detalle.html",
        "parcel:build": "parcel build ./src/index.html ./src/categoria.html ./src/detalle.html",
        "dev": "npm-run-all clean parcel:dev",
        "build": "npm-run-all clean parcel:build",
        "clean": "rimraf dist .cache .cache-loader"
    },
    "devDependencies": {
        "cssnano": "^4.1.10",
        "font-awesome": "^4.7.0",
        "npm-run-all": "^4.1.5",
        "parcel-bundler": "^1.12.4",
        "parcel-plugin-custom-dist-structure": "^1.1.16",
        "postcss-modules": "^3.2.2",
        "rimraf": "^3.0.2"
    },
    "dependencies": {
        "autoprefixer": "^9.8.6",
        "parcel-bundler": "^1.12.4"
    },
    "customDistStructure": {
        "config": {
            "script": "js",
            "css": "css",
            "img": [
                ".jpg",
                ".png"
            ]
        }
    }
}
